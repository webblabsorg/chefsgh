# ============================================
# Ghana Chef Association - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control


# ============================================
# API & FRONTEND CONFIGURATION
# ============================================
API_PORT=4000
CLIENT_ORIGIN=https://chefsghana.com
VITE_API_BASE_URL=https://chefsghana.com
ADMIN_BASE_PATH=/admin

# ============================================
# PAYSTACK PAYMENT GATEWAY
# ============================================
# Get these from: https://dashboard.paystack.com/#/settings/developer
VITE_PAYSTACK_PUBLIC_KEY=pk_live_your_public_key_here
PAYSTACK_SECRET_KEY=sk_live_your_secret_key_here
PAYSTACK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# DATABASE CONFIGURATION (Neon Postgres)
# ============================================
# Get your connection string from: https://console.neon.tech
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Legacy MySQL vars (not used with Postgres)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=chefs_db
# MYSQL_USER=your_db_user
# MYSQL_PASSWORD=your_db_password

# ============================================
# EMAIL CONFIGURATION (DirectAdmin)
# ============================================
# Email server settings for DirectAdmin
EMAIL_HOST=mail.chefsghana.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=info@chefsghana.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=info@chefsghana.com
EMAIL_FROM_NAME=Ghana Chef Association
SUPPORT_EMAIL=support@chefsghana.com

# Admin notification email (receives new registration alerts)
ADMIN_EMAIL=admin@chefsghana.com

# ============================================
# ADMIN AUTH (JWT + Cookie)
# ============================================
# JWT secret already defined below; add cookie/JWT settings for admin area
AUTH_JWT_EXPIRES=1d
AUTH_COOKIE_NAME=chefs_admin_token
COOKIE_DOMAIN=chefsghana.com
COOKIE_SECURE=true

# Reset password token expiry
AUTH_RESET_EXPIRES=15m

# Seed initial admin (used once at boot; then can be removed)
ADMIN_SEED_EMAIL=admin@chefsghana.com
ADMIN_SEED_PASSWORD=chefsgh8195
ADMIN_SEED_NAME=Administrator

# ============================================
# APPLICATION SETTINGS
# ============================================
# Application URL
APP_URL=https://chefsghana.com
APP_NAME=Ghana Chef Association

# Environment (development, staging, production)
NODE_ENV=production

# ============================================
# SECURITY & ENCRYPTION
# ============================================
# Secret key for JWT tokens and encryption
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here

# Session secret
SESSION_SECRET=your-session-secret-here

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
# Maximum file sizes (in bytes)
MAX_PROFILE_PHOTO_SIZE=2097152
MAX_CERTIFICATE_SIZE=5242880
MAX_STUDENT_ID_SIZE=3145728

# Upload directory
UPLOAD_DIR=./uploads

# ============================================
# EXPORT / IMPORT (CSV)
# ============================================
EXPORT_CSV_CHUNK_SIZE=5000
IMPORT_CSV_MAX_ROWS=20000

# ============================================
# API RATE LIMITING
# ============================================
# Rate limit settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable logging
ENABLE_LOGGING=true

# ============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================
# SMS Gateway (for notifications)
SMS_API_KEY=
SMS_SENDER_ID=GhanaChef

# Cloud Storage (if using AWS S3, Cloudinary, etc.)
CLOUD_STORAGE_PROVIDER=
CLOUD_STORAGE_KEY=
CLOUD_STORAGE_SECRET=
CLOUD_STORAGE_BUCKET=

# Analytics
GOOGLE_ANALYTICS_ID=
